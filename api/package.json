{
  "name": "acme-server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm run db:migrate && tsx src/http/server.ts",
    "dev": "tsx watch --env-file=.env src/http/server.ts",
    "db:seed": "tsx --env-file=.env src/db/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate",
    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "pretest": "npm run db:migrate:test",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "format": "biome check src --write",
    "mail:dev": "email dev --dir src/mail/templates"
  },
  "author": "Victor Nogueira <vmnogueira.ti@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "3.651.0",
    "@aws-sdk/lib-storage": "3.651.0",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.2.1",
    "@fastify/websocket": "^11.0.1",
    "@langchain/community": "^0.3.24",
    "@langchain/core": "^0.3.30",
    "@langchain/openai": "^0.3.17",
    "@react-email/components": "0.0.21",
    "@react-email/render": "0.0.16",
    "@react-email/tailwind": "0.0.18",
    "@upstash/redis": "^1.34.3",
    "@upstash/vector": "^1.2.0",
    "dayjs": "1.11.12",
    "drizzle-orm": "0.32.0",
    "drizzle-zod": "0.5.1",
    "fastify": "^5.1.0",
    "fastify-type-provider-zod": "^4.0.2",
    "jose": "5.6.3",
    "langchain": "^0.3.11",
    "nodemailer": "6.9.14",
    "openai": "^4.67.1",
    "pino-pretty": "^13.0.0",
    "postgres": "3.4.4",
    "react": "18.3.1",
    "react-email": "2.1.5",
    "stripe": "^17.5.0",
    "typeid-js": "1.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@faker-js/faker": "8.4.1",
    "@types/node": "20.14.11",
    "@types/nodemailer": "6.4.15",
    "@types/react": "18.3.3",
    "@vitest/ui": "2.0.3",
    "dotenv-cli": "7.4.2",
    "drizzle-kit": "0.23.0",
    "pg": "8.12.0",
    "tsx": "4.16.2",
    "typescript": "5.5.3",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.0.3"
  }
}
